vendor-prefixes ?= webkit moz ms official
@import 'nib'

global-reset();

.clear
    clearfix()

*
    box-sizing: border-box;

input[type="submit"], input[type="button"], button
	cursor pointer
	text-transform capitalize
html
    padding 0
    margin 0
body
    padding 32px
    margin 0
    background #f4f4f1
    font-size 16px
    color #101010
    text-align center
    font-family arial
    text-align center
    line-height 28px
p
    margin 0 20px
h1
    font-size 2em
    margin-bottom 0.5em

h2
    font-size 1.2em
    margin-bottom 0.8em
    padding-left 0.5em

span
    display block
    color #444
    margin-top 0.5em
    font-size 2.5em

strong
    font-weight bold

a, a:visited, a:hover
    color #000

img
    max-width 150px
    height auto
    margin 0 auto 20px

@media (max-width: 720px)
    body
        font-size 14px
        padding 20px 10px

    h1
        margin-bottom 10px
        font-size 2em
        line-height 1em
    p
        margin 0px
